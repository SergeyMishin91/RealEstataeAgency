<Window x:Class="RealEstateAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateAgency"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left" Background="White" BorderBrush="Black">
            <MenuItem Header="_Файл">
                <Separator/>
                <MenuItem Header="_Закрыть" Click="FileExit_Click"/>
            </MenuItem>
            <MenuItem Header="_Просмотр">
                <MenuItem Header="_Недвижимость">
                    <MenuItem Header="_Продажа">

                    </MenuItem>
                    <MenuItem Header="_Аренда">

                    </MenuItem>
                </MenuItem>

                <MenuItem Header="_Клиенты">
                    <MenuItem Header="_Покупатель">

                    </MenuItem>
                    <MenuItem Header="_Продавец">

                    </MenuItem>
                    <MenuItem Header="_Арендодатель">

                    </MenuItem>
                    <MenuItem Header="_Арендатор">

                    </MenuItem>
                </MenuItem>

                <MenuItem Header="_Договоры">
                    <MenuItem Header="_Продажа">

                    </MenuItem>
                    <MenuItem Header="_Аренда">

                    </MenuItem>
                </MenuItem>

            </MenuItem>
            <MenuItem Header="_Изменить">

            </MenuItem>
            <MenuItem Header="_Настройки">

            </MenuItem>
            <MenuItem Header="_О программе">

            </MenuItem>
        </Menu>

        <TabControl Name="allOptionsTC" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TabItem Header="Недвижимость">
                <Grid DockPanel.Dock="Left" Background="AliceBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="284*"/>
                        <RowDefinition Height="179*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="353*"/>
                        <ColumnDefinition Width="639*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Назначение объекта недвижимости" Margin="0,5,140,10" Grid.Row="0" Grid.Column="0"/>
                    <ComboBox Margin="220,5,1,10" Grid.Row="0" >
                        <ComboBoxItem Content="офис"/>
                        <ComboBoxItem Content="склад"/>
                        <ComboBoxItem Content="производство/цех"/>
                        <ComboBoxItem Content="все объекты"/>
                    </ComboBox>
                    <Label Name="estateDescription" Grid.Row="1" Grid.Column="1" Margin="10,1,20,107" Grid.RowSpan="2"/>

                 
                    <ListView Name="estateSense" HorizontalAlignment="Left" Height="256" Margin="10,1,0,0" 
                        VerticalAlignment="Top" Width="339" Grid.Row="1" Grid.Column="0" SelectionChanged="estateSense_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Назначение объекта" 
                                        DisplayMemberBinding="{Binding EstateFunction}" />
                                    <GridViewColumn Header="Площадь" 
                                        DisplayMemberBinding="{Binding EstateSpace}" />
                                    <GridViewColumn Header="Цена (бел.р.)" 
                                        DisplayMemberBinding= "{Binding EstateCostOfSale}" />
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>

                
                    <Label Content="Сортировка объектов" Margin="10,10,200,130" Grid.Row="2" Grid.Column="0" />
                    <ComboBox Margin="160,10,1,140" Grid.Row="2" >
                        <ComboBoxItem Content="по цене"/>
                        <ComboBoxItem Content="по году постройки"/>
                        <ComboBoxItem Content="по площади"/>
                        <ComboBoxItem Content="без сортировки"/>
                    </ComboBox>

                    <Label Content="Город:" Margin="10,60,200,90" Grid.Row="2" Grid.Column="0" />
                    <TextBox Margin="160,60,1,90" Grid.Row="3" ></TextBox>

                    <Button Name="addEstate" Content="Добавить" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Margin="281,130,254,19" Click="addEstate_Click"/>
                    <Button Name="changeEstate" Content="Изменить" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Margin="399,130,136,19" Click="changeEstate_Click"/>
                    <Button Name="deleteEstate" Content="Удалить" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Margin="515,130,20,19" Click="deleteEstate_Click"/>
                    <RadioButton Content="Аренда" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="Продажа" Grid.Column="1" HorizontalAlignment="Left" Margin="82,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.464,0.444"/>
                    <RadioButton Content="Вся недвижимость" Grid.Column="1" HorizontalAlignment="Left" Margin="164,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Клиенты">

            </TabItem>
            <TabItem Header="Договоры">

            </TabItem>
        </TabControl>

        <StatusBar DockPanel.Dock="Bottom" Background="Beige">
            <StatusBarItem>
                <TextBlock Name="statBarText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>

    </DockPanel>
</Window>
