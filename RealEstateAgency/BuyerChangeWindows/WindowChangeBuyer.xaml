<Window x:Class="RealEstateAgency.BuyerChangeWindows.WindowChangeBuyer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Model;assembly=Model"
        mc:Ignorable="d"
        Title="Изменение данных" Height="450" Width="360"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:Buyer x:Key="DataContext"/>
    </Window.Resources>

    <Grid DataContext="{StaticResource DataContext}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="49*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="LabelAddBuyerName" Content="Наименование" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="107" Height="26"/>
        <Label Grid.Row="1" x:Name="LabelChangeBuyerAdress" Content="Юридический адрес" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="123" Height="26"/>
        <Label Grid.Row="2" x:Name="LabelChangeBuyerUNP" Content="УНП" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="107" Height="26"/>
        <Label Grid.Row="3" x:Name="LabelChangeBuyerPhone" Content="Телефон" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="107" Height="26"/>
        <Label Grid.Row="4" x:Name="LabelChangeBuyerRequest" Content="Требование" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="107" Height="26"/>


        <TextBox Grid.Column="1" Name="TextBoxChangeBuyerName" HorizontalAlignment="Left" Height="26" 
                 Margin="35,5,0,0" VerticalAlignment="Top" Width="160"
                 Text="{Binding BuyerName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontWeight="Bold" Foreground="Red"  Grid.Column="1" Margin="35,30,17,0" FontSize="10"
            Content="{Binding ElementName=TextBoxChangeBuyerName, Path=(Validation.Errors).CurrentItem.ErrorContent}" />
        
        <TextBox Grid.Row="1" Grid.Column="1" Name="TextBoxChangeBuyerAdress" HorizontalAlignment="Left" Height="26" 
                 Margin="35,5,0,0" VerticalAlignment="Top" Width="160"
                 Text="{Binding BuyerAdress, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontWeight="Bold" Foreground="Red"  Grid.Column="1" Margin="35,30,17,0" FontSize="10"
            Content="{Binding ElementName=TextBoxChangeBuyerAdress, Path=(Validation.Errors).CurrentItem.ErrorContent}" Grid.Row="1" />
        
        <TextBox Grid.Row="2" Grid.Column="1" Name="TextBoxChangeBuyerUNP" HorizontalAlignment="Left" Height="26" 
                  Margin="35,5,0,0" VerticalAlignment="Top" Width="160" 
                 Text="{Binding BuyerUNP, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontWeight="Bold" Foreground="Red"  Grid.Column="1" Margin="35,30,17,0" FontSize="10"
            Content="{Binding ElementName=TextBoxChangeBuyerUNP, Path=(Validation.Errors).CurrentItem.ErrorContent}" Grid.Row="2" />
        
        <TextBox Grid.Row="3" Grid.Column="1" Name="TextBoxChangeBuyerPhone" HorizontalAlignment="Left" Height="26"
                   Margin="35,5,0,0" VerticalAlignment="Top" Width="160"
                 Text="{Binding BuyerPhone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontWeight="Bold" Foreground="Red"  Grid.Column="1" Margin="35,30,17,0" FontSize="10"
            Content="{Binding ElementName=TextBoxChangeBuyerPhone, Path=(Validation.Errors).CurrentItem.ErrorContent}" Grid.Row="3" />
        
        <TextBox Grid.Row="4" Grid.Column="1" Name="TextBoxChangeBuyerRequest" Height="95" Margin="35,5,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="160"
                 Text="{Binding BuyerRequest, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label FontWeight="Bold" Foreground="Red"  Grid.Column="1" Margin="35,105,17,10" FontSize="10"
            Content="{Binding ElementName=TextBoxChangeBuyerRequest, Path=(Validation.Errors).CurrentItem.ErrorContent}" Grid.Row="4" />

        <StackPanel  Grid.Row="5" Grid.ColumnSpan="2" Margin="0,3,0,0">
            <Button  x:Name="ButtonChangeBuyer" Content="Сохранить" HorizontalAlignment="Left" Margin="160,10,0,15" 
                     VerticalAlignment="Top" Width="75" Click="ButtonChangeBuyer_Click" />
            <Button  x:Name="ButtonCancel" Content="Отмена" Margin="250,-35,0,0" VerticalAlignment="Top" 
                     HorizontalAlignment="Left" Width="75" Click="ButtonCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
